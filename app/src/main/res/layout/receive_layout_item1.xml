<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/Rl_receive_null"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/ll_receive_item1_ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/timg">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="bottom"
      android:paddingLeft="3dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收件箱"
        android:textSize="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"/>
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="10dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="没有消息"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="@color/chatui_chat_msg_text_color"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="找到喜欢的房源后就，和房东取得联系。简单介绍一下自己，并告诉他们您此行的目的。"
      android:paddingTop="8dp"
      android:textColor="@color/chatui_chat_card_secondary_text"
      android:layout_marginBottom="5dp"/>

    <Button
      android:id="@+id/btn_begin_explore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="开始探索"
      android:textColor="@android:color/white"
      android:background="@drawable/fragment_botton_bg"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:layout_marginTop="5dp"/>

  </LinearLayout>
</RelativeLayout>