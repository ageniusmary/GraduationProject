<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="热门目的地"
        android:textColor="@color/chatui_chat_msg_text_color"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scan_item_city_shanghai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/city_botton_bg"
            android:elevation="10dp"
            android:text="上海"
            android:textColor="@color/chatui_chat_msg_text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/scan_item_city_chengdu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/city_botton_bg"
            android:elevation="10dp"
            android:text="成都"
            android:textColor="@color/chatui_chat_msg_text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/scan_item_city_beijing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/city_botton_bg"
            android:elevation="10dp"
            android:text="北京"
            android:textColor="@color/chatui_chat_msg_text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/scan_item_city_xian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/city_botton_bg"
            android:elevation="10dp"
            android:text="西安"
            android:textColor="@color/chatui_chat_msg_text_color"
            android:textSize="15dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scan_item_city_rv1"
        android:layout_width="match_parent"
        android:layout_height="880dp"
        android:descendantFocusability="blocksDescendants">

    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/btn_show_more_house"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/myrect"
        android:text="显示更多上海房源"
        android:textColor="@color/chatui_chat_bg"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="经典旅游城市"
        android:textColor="@color/chatui_chat_msg_text_color"
        android:textSize="30dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="30dp"
        android:paddingEnd="50dp"
        android:paddingLeft="60dp"
        android:paddingStart="50dp"
        android:paddingRight="60dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="高分体验"
        android:textColor="@color/chatui_chat_msg_text_color"
        android:textSize="30dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scan_item_city_rv3"
        android:layout_width="match_parent"
        android:layout_height="880dp"
        android:descendantFocusability="blocksDescendants">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_show_more_tiyan"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/myrect"
        android:text="显示所有体验"
        android:textColor="@color/chatui_chat_bg"
        android:textSize="15dp" />

</LinearLayout>