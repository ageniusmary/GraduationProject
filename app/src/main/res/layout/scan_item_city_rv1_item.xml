<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/scan_item_house_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/fragment_botton_bg"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/scan_item_house_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="整套公寓·上海" />

        <TextView
            android:id="@+id/scan_item_house_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="拥天井花园，私人影院的石库门阁"
            android:textColor="@color/chatui_chat_msg_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/scan_item_house_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="¥618每晚" />
    </LinearLayout>
</android.support.v7.widget.CardView>